<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ProfileFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_margin="16dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:fontFamily="@font/helveticaneuebold"
            android:textSize="28sp"
            android:textColor="#3F414E"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="66dp"
            />

        <ImageView
            android:id="@+id/iv_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/heading"
            android:src="@drawable/profile_illustration"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/iv_profile"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="34dp"
            android:text="Astitva Arora"
            android:textColor="#3F414E"
            android:fontFamily="@font/helveticaneuemedium"
            android:textSize="20sp"
            />

        <TextView
            android:id="@+id/tv_user_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_user_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="astitva.arora10@gmail.com"
            android:fontFamily="@font/helveticaneuelight"
            android:textColor="#3F414E"
            android:textSize="14sp"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/tv_account_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Account Setting"
            android:fontFamily="@font/helveticaneuemedium"
            app:layout_constraintTop_toBottomOf="@id/tv_user_email"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="35dp"
            android:layout_marginStart="20dp"
            android:textSize="14sp"
            android:textColor="#757991"
            />
        <TextView
            android:id="@+id/tv_personal_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Personal Information"
            android:fontFamily="@font/helveticaneuemedium"
            android:textSize="16sp"
            android:textColor="#3F414E"
            app:layout_constraintTop_toBottomOf="@id/tv_account_setting"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            />
        <ImageView
            android:id="@+id/iv_forward_personal_information"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/forward_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_account_setting"
            android:layout_marginTop="18dp"
            />
        <TextView
            android:id="@+id/tv_likes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Likes"
            android:fontFamily="@font/helveticaneuemedium"
            android:textSize="16sp"
            android:textColor="#3F414E"
            app:layout_constraintTop_toBottomOf="@id/tv_personal_info"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            />
        <ImageView
            android:id="@+id/iv_likes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/forward_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_personal_info"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:id="@+id/tv_feedback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Feedback"
            android:fontFamily="@font/helveticaneuemedium"
            android:textSize="16sp"
            android:textColor="#3F414E"
            app:layout_constraintTop_toBottomOf="@id/tv_likes"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            />
        <ImageView
            android:id="@+id/iv_feedback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/forward_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_likes"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/tv_help_and_support"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Help and Support"
            android:fontFamily="@font/helveticaneuemedium"
            app:layout_constraintTop_toBottomOf="@id/tv_feedback"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="35dp"
            android:layout_marginStart="20dp"
            android:textSize="14sp"
            android:textColor="#757991"
            />
        <TextView
            android:id="@+id/tv_privacy_policy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Privacy Policy"
            android:fontFamily="@font/helveticaneuemedium"
            android:textSize="16sp"
            android:textColor="#3F414E"
            app:layout_constraintTop_toBottomOf="@id/tv_help_and_support"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            />
        <ImageView
            android:id="@+id/iv_help_and_support"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/forward_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_help_and_support"
            android:layout_marginTop="18dp"
            />
        <TextView
            android:id="@+id/tv_terms_and_condition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Terms and Condition"
            android:fontFamily="@font/helveticaneuemedium"
            android:textSize="16sp"
            android:textColor="#3F414E"
            app:layout_constraintTop_toBottomOf="@id/tv_privacy_policy"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            />
        <ImageView
            android:id="@+id/iv_terms_and_condition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/forward_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_privacy_policy"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:id="@+id/tv_faq_and_help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/faq_amp_help"
            android:fontFamily="@font/helveticaneuemedium"
            android:textSize="16sp"
            android:textColor="#3F414E"
            app:layout_constraintTop_toBottomOf="@id/tv_terms_and_condition"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            />
        <ImageView
            android:id="@+id/iv_faq_and_help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/forward_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_terms_and_condition"
            android:layout_marginTop="10dp"
            />

        <ImageView
            android:id="@+id/iv_logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/logout_icon"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_faq_and_help" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:fontFamily="@font/helveticaneuebold"
            android:textSize="16sp"
            android:textColor="#F83B3B"
            android:layout_marginTop="38dp"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@id/tv_faq_and_help"
            app:layout_constraintStart_toEndOf="@id/iv_logout"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
