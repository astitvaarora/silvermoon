<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.MainScreen">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo_small"
        app:layout_constraintStart_toEndOf="@id/silentTV"
        app:layout_constraintEnd_toStartOf="@id/moonTV"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:layout_marginTop="25dp"
        />
    <TextView
        android:id="@+id/silentTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Silent"
        android:layout_marginEnd="7dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:fontFamily="@font/airbnbcerealbold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/logo"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:layout_marginTop="29dp"
        />

    <TextView
        android:id="@+id/moonTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/airbnbcerealbold"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:text="Moon"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@id/logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:layout_marginTop="29dp"
        />
    <TextView
        android:id="@+id/tv_home_greeting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Good Morning, Astitva"
        android:textColor="#3F414E"
        android:fontFamily="@font/helveticaneuebold"
        android:textSize="28sp"
        app:layout_constraintTop_toBottomOf="@id/logo"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginStart="20dp"
        />
    <TextView
        android:id="@+id/tv_greeting_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="We wish you have a good day"
        android:fontFamily="@font/helveticaneuelight"
        android:textColor="#A1A4B2"
        app:layout_constraintTop_toBottomOf="@id/tv_home_greeting"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="20sp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/card1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/home_card_background"
        android:minWidth="177dp"
        android:minHeight="210dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/tv_greeting_desc"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        >
        <TextView
            android:id="@+id/tv_card1_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Basics"
            android:fontFamily="@font/helveticaneuebold"
            android:textSize="18sp"
            android:textColor="#FFECCC"
            android:layout_marginStart="15dp"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tv_course"
            app:layout_constraintStart_toStartOf="parent"
            />
        <TextView
            android:id="@+id/tv_course"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Course"
            android:fontFamily="@font/helveticaneuemedium"
            android:textSize="11sp"
            android:textColor="#FFECCC"
            android:layout_marginStart="15dp"
            app:layout_constraintTop_toBottomOf="@id/tv_card1_title"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />
        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:minHeight="35dp"
            android:minWidth="75dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="15dp"
            android:text="Start"
            android:textSize="12sp"
            android:fontFamily="@font/helveticaneuemedium"
            android:textColor="#3F414E"
            />
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3-10 min"
            android:textColor="#EBEAEC"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="26dp"
            android:layout_marginStart="15dp"

            />



    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/card2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/home_card2_background"
        android:minWidth="177dp"
        android:minHeight="210dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/tv_greeting_desc"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20dp"
        >
        <TextView
            android:id="@+id/tv_card2_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Relaxation"
            android:fontFamily="@font/helveticaneuebold"
            android:textSize="18sp"
            android:textColor="#3F414E"
            android:layout_marginStart="15dp"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tv_course2"
            app:layout_constraintStart_toStartOf="parent"
            />
        <TextView
            android:id="@+id/tv_course2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Music"
            android:fontFamily="@font/helveticaneuemedium"
            android:textSize="11sp"
            android:textColor="#3F414E"
            android:layout_marginStart="15dp"
            app:layout_constraintTop_toBottomOf="@id/tv_card2_title"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />
        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#3F414E"
            android:minHeight="35dp"
            android:minWidth="75dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="15dp"
            android:text="Start"
            android:textSize="12sp"
            android:fontFamily="@font/helveticaneuemedium"
            android:textColor="@color/white"
            />
        <TextView
            android:id="@+id/tv_time2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3-10 min"
            android:textColor="#3F414E"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="26dp"
            android:layout_marginStart="15dp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/card3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/card3_background"
        android:minWidth="374dp"
        android:minHeight="95dp"
        app:layout_constraintTop_toBottomOf="@id/card1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp">
        <TextView
            android:id="@+id/tv_title_card3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Daily Thoughts"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="@color/white"
            android:fontFamily="@font/helveticaneuebold"
            android:textSize="18sp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="27dp"
            />
        <TextView
            android:id="@+id/tv_desc_card3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MEDITATION . "
            android:textColor="@color/white"
            android:textSize="11sp"
            android:fontFamily="@font/helveticaneuemedium"
            app:layout_constraintTop_toBottomOf="@id/tv_title_card3"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            />
        <TextView
            android:id="@+id/tv_time_card3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3-10 MIN"
            android:textColor="@color/white"
            android:textSize="11sp"
            app:layout_constraintStart_toEndOf="@id/tv_desc_card3"
            app:layout_constraintTop_toBottomOf="@id/tv_title_card3"
            android:layout_marginTop="2dp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/play_icon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="30dp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tv_recommended_for_you"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recommended for you"
        android:textColor="#3F414E"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@id/card3"
        android:fontFamily="@font/helveticaneuemedium"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_main_screen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="165dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/tv_recommended_for_you"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />




</androidx.constraintlayout.widget.ConstraintLayout>