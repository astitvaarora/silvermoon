<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/greeting_illustration"
    style="@style/greetingscreenstyle"
    tools:context=".fragments.GreetingScreen">
    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/inverted_logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="25dp"
        />
    <TextView
        android:id="@+id/tv_greeting_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Hi Astitva, Welcome"
        android:layout_marginTop="35dp"
        android:textColor="#FFECCC"
        android:textSize="30sp"
        android:fontFamily="@font/helveticaneuebold"
        />
    <TextView
        android:id="@+id/tv_greeting_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="to Silent Moon"
        android:fontFamily="@font/helveticaneuelight"
        android:textColor="#FFECCC"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@+id/tv_greeting_message"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Explore the app,find some peace of mind to \n prepare for meditation"
        android:textColor="#EBEAEC"
        android:gravity="center"
        android:fontFamily="@font/helveticaneuelight"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/tv_greeting_desc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_get_started"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#EBEAEC"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="40dp"
        android:minHeight="63dp"
        android:minWidth="347dp"
        android:text="GET STARTED"
        android:textColor="#3F414E"
        />

</androidx.constraintlayout.widget.ConstraintLayout>