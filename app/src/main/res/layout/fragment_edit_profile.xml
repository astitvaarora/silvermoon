<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.EditProfileFragment">

    <TextView
        android:id="@+id/heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Profile"
        android:fontFamily="@font/helveticaneuebold"
        android:textSize="28sp"
        android:textColor="#3F414E"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="66dp"
        />

    <ImageView
        android:id="@+id/iv_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/heading"
        android:src="@drawable/profile_illustration"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <ImageView
        android:id="@+id/iv_email_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/email_icon"
        app:layout_constraintTop_toBottomOf="@id/iv_profile"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="74dp"
        />
    <ImageView
        android:id="@+id/iv_profile_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/edit_profile_icon"
        app:layout_constraintTop_toBottomOf="@id/iv_email_icon"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/tv_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="astitva.arora10@gmail.com"
        android:fontFamily="@font/helveticaneuemedium"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/iv_profile"
        app:layout_constraintStart_toEndOf="@id/iv_email_icon"
        android:layout_marginTop="72dp"
        android:layout_marginStart="12dp"
        />
    <TextView
        android:id="@+id/tv_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="astitva arora"
        android:fontFamily="@font/helveticaneuemedium"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/iv_email_icon"
        app:layout_constraintStart_toEndOf="@id/iv_profile_icon"
        android:layout_marginTop="20dp"
        android:layout_marginStart="14dp"
        />
    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/edittext_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_design"
        app:layout_constraintTop_toBottomOf="@id/iv_profile_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:minWidth="374dp"
        android:minHeight="63dp"
        android:textColor="@color/black"
        app:circularflow_radiusInDP="12dp"
        android:fontFamily="@font/helveticaneuelight"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingStart="20dp"
        android:textColorHint="#A1A4B2"
        android:layout_marginTop="20dp"
        />
    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/edittext_confirm_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_design"
        app:layout_constraintTop_toBottomOf="@id/edittext_password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:minWidth="374dp"
        android:minHeight="63dp"
        android:textColor="@color/black"
        app:circularflow_radiusInDP="12dp"
        android:fontFamily="@font/helveticaneuelight"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:paddingStart="20dp"
        android:textColorHint="#A1A4B2"
        android:layout_marginTop="20dp"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:minWidth="374dp"
        android:minHeight="63dp"
        android:textColor="@color/white"
        android:text="SAVE"
        android:fontFamily="@font/helveticaneuemedium"
        />




</androidx.constraintlayout.widget.ConstraintLayout>